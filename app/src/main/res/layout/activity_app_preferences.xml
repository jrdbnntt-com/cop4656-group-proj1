<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cop4656.jrdbnntt.com.groupproject1.AppPreferences">

    <TextView
        android:id="@+id/AlarmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm clock will alert you in..."
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp" />

    <Spinner
        android:id="@+id/alarmSpinner"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="35dp"
        android:layout_below="@+id/AlarmText"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/garageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferred Parking Garage"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="147dp"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/alarmSpinner"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/parkingSpinner"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="169dp"
        android:layout_below="@+id/garageText"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/preferencesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Preferences"
        android:textAppearance="@android:style/TextAppearance.Material.Display2" />

    <Button
        android:id="@+id/preferencesSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="submit"
        android:text="Submit" />

</RelativeLayout>
